@using OrderTracker.Models;
@{
  Layout = "_Layout";
}
<h1>@Model["vendor"].Name </h1>
@foreach (Order order in @Model["Orders"])
{
  <a href='/vendors/@Model["vendors"].Id/orders/@order.Id'><button class="btn btn-outline-info btn-sm">@order.Title</button></a>
}

<p><a href='/vendors/@Model["vendors"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendors</a></p>